@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Branch>
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Index";
}

<h2>מסך סניפים</h2>

<p>
    <a asp-action="Create">צור חדש</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            חפש לפי:
            <select name="FilterType" class="index-search-select">
                <option selected="@((string)ViewData["filterType"] == "שם")">שם</option>
                <option selected="@((string)ViewData["filterType"] == "עיר")">עיר</option>
                <option selected="@((string)ViewData["filterType"] == "כתובת")">כתובת</option>
            </select>
            <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input placeholder="ערך חיפוש" type="submit" value="חפש" class="btn btn-default index-submit-button"/> |
            <a asp-action="Index">בחזרה לרשימה מלאה</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th class="index-table-th">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="index-table-th">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="index-table-th">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="index-table-th">
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th class="index-table-th">
                @Html.DisplayNameFor(model => model.IsSaturday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @{
                        if (item.IsSaturday)
                        { <text>כן</text> }
                    else
                    { <text>לא</text> }
                    }
                </td>
                <td>
                    @{
                        var isAdmin = Context.Session.GetString("isAdmin") == "true" ? true : false;
                        if (isAdmin)
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id">ערוך</a> |
                                <a asp-action="Delete" asp-route-id = "@item.Id">מחק</a>
                            </div>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

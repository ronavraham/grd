@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Branch>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">צור חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="branch-th">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="branch-th">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="branch-th">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="branch-th">
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th class="branch-th">
                @Html.DisplayNameFor(model => model.IsSaturday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @{
                    if (item.IsSaturday)
                    { <text>כן</text> }
                else
                { <text>לא</text> }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ערוך</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">מחק</a>
            </td>
        </tr>
}
    </tbody>
</table>

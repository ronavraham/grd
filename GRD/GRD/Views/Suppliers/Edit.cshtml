@model GRD.Models.Supplier

@{
    ViewData["Title"] = "Edit";
}

<div class='page_title_container'>
    <h2 class='page_title'>עריכת ספק</h2>
</div>

<div class='create_edit_form_container'>
    <form asp-action="Edit" class='create_edit_form'>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group form_footer">
            <input type="submit" value="שמור" class="btn btn-default button" />
            <a asp-action="Index">בחזרה לרשימת ספקים</a>
        </div>
    </form>
</div>
    
</br>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

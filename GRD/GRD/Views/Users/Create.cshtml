@model EFGetStarted.AspNetCore.NewDb.Models.User

@{
    ViewData["Title"] = "Create";
}

<h2>צור משתמש חדש</h2>

<hr />
<div class="row">
    <div class="col-md-4 create-form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="radio">
                    <label style="font-weight:bold">
                        @Html.DisplayNameFor(model => model.Gender)
                        @*<input asp-for="Gender" /> @Html.DisplayNameFor(model => model.Gender)*@
                    </label>
                    <div style="display:inline-block">
                        <div>
                            <input asp-for="Gender" type="radio" name="gender" value="@false">
                        </div>
                        <div>
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;זכר</label>
                        </div>
                    </div>
                    <div style="display:inline-block">
                        <div>
                            <input asp-for="Gender" type="radio" name="gender" value="@true">
                        </div>
                        <div>
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;נקבה</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAdmin" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayNameFor(model => model.IsAdmin)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="צור" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">בחזרה לרשימת המשתמשים</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
